<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ModelisateurWPF.View"
                    xmlns:vm="clr-namespace:ModelisateurWPF.ViewModel">

    <DataTemplate x:Key="EmplacementCodeView" DataType="{x:Type vm:EmplacementViewModel}">
        <DockPanel>
            <TextBox TextWrapping="Wrap" 
                     Text="{Binding Path=SourceCode, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
                     VerticalScrollBarVisibility="Auto" 
                     AcceptsReturn="True" AcceptsTab="True"/>
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>